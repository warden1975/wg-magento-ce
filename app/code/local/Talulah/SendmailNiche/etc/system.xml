<config>
    <tabs>
        <sendmailniche translate="label" >
            <label>Niche Integration</label>
            <sort_order>1</sort_order>
        </sendmailniche>
    </tabs> 
    <sections>
        <sendmail translate="label" >
            <label>Send email to niche</label>
            <tab>sendmailniche</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
			<groups>
				<feed_order>
					<label>Feed order to niche</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default> 			
					<fields>
						<active translate="label">
							<label>Enabled</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
						</active>
						<email translate="label">
							<label>Email</label>
							<comment>Email receive email feed order, Empty will get data from Send Order Email Copy</comment>
							<frontend_type>text</frontend_type>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>              
						</email>
						<niche_template translate="label">
                            <label>Feed order Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                        </niche_template>
					</fields>       
				</feed_order>
				<feed_order_error>
					<label>Feed order Error and Retry handling</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
					<fields>
						<niche_error_retry_active translate="label">
                            <label>Enable Error and Retry</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                        </niche_error_retry_active>
						<email_error translate="label">
							<label>Email Error/Fault</label>
							<comment>Email to receive error or fault logs</comment>
							<frontend_type>text</frontend_type>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>              
						</email_error>
						<niche_error_template translate="label">
                            <label>Error Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                        </niche_error_template>
					</fields>
				</feed_order_error>
            </groups>			
        </sendmail>
    </sections>     
</config>